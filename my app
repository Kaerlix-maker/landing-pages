<html lang="ar">
<head>
  <meta charset="UTF-8">
  <title>مشاركة الرحلات - نسخة أولية</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f4f4;
      padding: 20px;
      direction: rtl;
    }
    h1 {
      text-align: center;
    }
    input, button {
      width: 100%;
      padding: 10px;
      margin: 5px 0;
      font-size: 16px;
    }
    button {
      background: #2ecc71;
      color: white;
      border: none;
      cursor: pointer;
    }
    .trip {
      background: white;
      padding: 10px;
      margin-top: 10px;
      border-radius: 5px;
    }
  </style>
</head>
<body>

  <h1>أضف رحلة</h1>

  <input id="from" placeholder="من أين؟">
  <input id="to" placeholder="إلى أين؟">
  <button onclick="addTrip()">أضف الرحلة</button>

  <h2>الرحلات المتاحة</h2>
  <div id="trips"></div>

  <script>
    function addTrip() {
      const from = document.getElementById('from').value;
      const to = document.getElementById('to').value;

      if (!from || !to) {
        alert("من فضلك املأ كل الحقول");
        return;
      }

      const tripDiv = document.createElement('div');
      tripDiv.className = 'trip';
      tripDiv.innerText = `من: ${from} → إلى: ${to}`;

      document.getElementById('trips').appendChild(tripDiv);

      document.getElementById('from').value = '';
      document.getElementById('to').value = '';
    }
  </script>

</body>
</html>
